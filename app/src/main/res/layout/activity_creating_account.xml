<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="#009688"
            android:orientation="horizontal"
            android:id="@+id/ccc">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textSize="30dp"
                android:fontFamily="@font/pt_sans_narrow_web_bold"
                android:textColor="#ffff"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="9dp"
                android:id="@+id/signinText"
                android:layout_weight="1"
                />

            <TextView
                android:layout_width="195dp"
                android:layout_height="47dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/signinText"
                android:text="@string/app_name"
                android:layout_weight="0"
                android:textSize="20sp"
                android:textColor="#ffff"


                />
        </LinearLayout>

        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="User Details"-->
        <!--android:textSize="13pt"-->
        <!--android:textAlignment="center"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:layout_marginTop="20dp"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="40dp"
            android:layout_weight="2">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="90dp">




                <RelativeLayout
                    android:id="@+id/nicSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Employee ID"
                        android:id="@+id/textempid"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/textempid"
                        android:id="@+id/editTextNic"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <RelativeLayout
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:id="@+id/textpw1"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/textpw1"
                        android:inputType="textPassword"
                        android:id="@+id/editTextPw1"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/xxx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Password (Confirm)"
                        android:id="@+id/textpw2"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/textpw2"
                        android:inputType="textPassword"
                        android:id="@+id/editTextPw2"/>

                </RelativeLayout>

            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:background="@drawable/button_layout"
                android:text="Next"
                android:layout_marginBottom="10dp"
                android:textColor="#3e7cb6"
                android:id="@+id/submitButton"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#A52626"
                android:id="@+id/errorText"
                android:textAlignment="center"/>


        </LinearLayout>

        <!--<RelativeLayout-->
        <!--android:layout_width="match_parent"-->
